##
##  This is the makefile for the Mindy load and go executive
##	and any other small programs that might be useful.
##

SHELL	=	/bin/sh

##
## begin autoconf'ed source
##

prefix	=		@prefix@
exec_prefix	=	@exec_prefix@
srcdir	=		@srcdir@

SRCDIR	=		${srcdir}
BINDIR	=		@bindir@
LIBDIR	=		@libdir@/dylan

CC	=		@CC@
CCOPTS	=		@CCOPTS@
CFLAGS	=		$(CCOPTS) -I${SRCDIR} @DEFS@ -DBINDIR=\"${BINDIR}\" -DLIBDIR=\"${LIBDIR}\"
YACC	=		@YACC@
YFLAGS	=		-d
LEX	=		@LEX@
LFLAGS	=		@LFLAGS@
RANLIB	=		@RANLIB@
INSTALL	=		@INSTALL@
INSTALL_PROGRAM	=	@INSTALL_PROGRAM@
INSTALL_DATA	=	@INSTALL_DATA@

LIBOBJS =		@LIBOBJS@
LIBS	=		../compat/libcompat.a @LIBS@

##
## end of configure written portion
##

OBJS	= mindyexec.o

SRCS	= mindyexec.c

all:	mindyexec

mindyexec: mindyexec.o
	${CC} mindyexec.o ${LIBS} -o ,$@
	mv ,$@ $@

mindyexec.o: ${SRCDIR}/mindyexec.c
	${CC} -c ${CFLAGS} ${SRCDIR}/mindyexec.c

clean:
	rm -f ${OBJS} mindyexec *~ \#* core

realclean:
	rm -f ${OBJS} mindyexec Makefile *~ \#* core
	
install: mindyexec
	${INSTALL_PROGRAM} mindyexec ${BINDIR}/mindyexec

