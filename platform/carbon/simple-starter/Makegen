compile:
	/System/Developer/Tools/Rez -a -o $(BUILDDIR)/my-simple $(BUILDDIR)/../simple/simple-resources.r
	/System/Developer/Tools/Rez -a -o $(BUILDDIR)/my-simple $(BUILDDIR)/my-resources.r

EOF


